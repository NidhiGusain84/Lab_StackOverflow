@model List<Question>
@{
    ViewData["Title"] = "Index";
}





<form method="get" action="/QandA/Search">
    Search Question: <input type="text" name="str" />
    <input type="submit" value="Search" />
</form>

<h3>All Questions</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Detail</th>
            <th>Tags</th>
            <th>Status</th>
            <th>Posted</th>
            <th>Edit Question</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.Title</td>
                <td><a asp-controller="QandA" asp-action="QuestionAnswers" asp-route-id="@item.Id">@item.Detail</a></td>
                <td>@item.Tags</td>
                <td>@item.Status</td>
                <td>@item.Posted</td>
                <td><a asp-controller="QandA" asp-action="EditQuestionForm" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        </tbody>
    }
</table>

<div>
    <a class="btn btn-primary" asp-controller="QandA" asp-action="AddQuestionForm">Ask Question</a>
</div>
